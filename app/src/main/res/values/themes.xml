<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FamilyMedicineApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3DB197</item>
        <item name="colorPrimaryVariant">#56a16c</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- primary text color -->
    <style name="PrimaryTextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- large and bold text -->
    <style name="PrimaryTextColor.BoldLarge">
        <item name="android:textSize">@dimen/double_extra_large_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- welcome text style -->
    <style name="WelcomeText">
        <item name="android:textSize">@dimen/double_extra_large_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF03DAC5</item>
    </style>
</resources>
