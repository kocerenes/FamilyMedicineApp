<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.home.HomeFragment">


    <TextView
        android:id="@+id/textView3"
        style="@style/PrimaryTextColor.BoldLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="top"
        android:text="MERHABA, İSİM SOYİSİM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/home_imageview_width"
            android:layout_height="@dimen/home_imageview_height"
            android:src="@drawable/appointment" />

        <TextView
            android:id="@+id/textViewAppointment"
            style="@style/PrimaryTextColor.BoldLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Aile Hekimi Randevusu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border2"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/home_imageview_width"
            android:layout_height="@dimen/home_imageview_height"
            android:src="@drawable/vaccine2" />

        <TextView
            android:id="@+id/textViewVaccine"
            style="@style/PrimaryTextColor.BoldLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Aşı Randevusu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border3"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/home_imageview_width"
            android:layout_height="@dimen/home_imageview_height"
            android:src="@drawable/doctor" />

        <TextView
            android:id="@+id/textViewDoctor"
            style="@style/PrimaryTextColor.BoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="Aile Hekimim" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border4"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/home_imageview_width"
            android:layout_height="@dimen/home_imageview_height"
            android:src="@drawable/log_out" />

        <TextView
            android:id="@+id/textViewLogOut"
            style="@style/PrimaryTextColor.BoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="Çıkış Yap" />

    </LinearLayout>
</LinearLayout>